<h2 class="h2l">Lessons List </h2>
<head>
  <script>
    $(function(){
      $("table").stupidtable();
    });
  </script>
</head>
<table class = "table table-bordered" id="lessons" style="text-align:center">
  <thead>
    <tr>
      <th style = "text-align:center" data-sort="string">Title</th>
      <th style = "text-align:center">Description</th>
      <th style = "text-align:center" data-sort="string">Cemester</th>
      <th style = "text-align:center" data-sort="string">Category</th>
      <th style = "text-align:center">Teacher</th>
      <th style = "text-align:center">No of Uploads</th>
<!--       <th style = "text-align:center">Average Rating</th>
      <th style = "text-align:center">Rating</th> -->
      <th colspan = 3 style = "text-align:center">Action</th>
    </tr>
  </thead>
  <% @lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.title %></td>
      <td><%= lesson.description %><br/></td>
      <td><%= lesson.level %></td>
      <td><%= Category.where(id: lesson.category_id).first.name %></td>
      <td><%= User.where(id: lesson.user_id).first.email %></td>
      <td><%= lesson.uploads.count %></td>
<!--       <% if lesson.lesson_ratings.count > 0 %>
        <% @avg = 0 %>
        <% lesson.lesson_ratings.each do |rating| %>
          <% @avg = @avg + rating.avg %>
        <% end %>
      <td><%= @avg/lesson.lesson_ratings.count %></td>
      <% end %> -->
      <!-- <td><%= link_to "New Rating",new_admin_lesson_rating_path(:lesson_id=>lesson.id),:class => "btn btn-primary" %> </td> -->
      <td><%= link_to "Edit",  edit_admin_lesson_path(lesson), :class => "btn btn-primary" %></td>
      <td><%= link_to "Destroy",admin_lesson_path(lesson), method: :delete, :class => "btn btn-danger",data: { confirm: "You sure?" } %></td>
    </tr>
  <% end %>
</table>

