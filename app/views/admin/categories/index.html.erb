<h2> Categories List </h2>
<table class = "table table-bordered"  style="text-align:center">
  <th style = "text-align:center">Name</th>
  <th style = "text-align:center">No of Lessons</th>
  <th colspan = 2 style = "text-align:center">Action</th>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.lessons.count %></td>
      <td><%= link_to "Edit",  edit_admin_category_path(category), :class => "btn btn-primary" %></td>
      <td><%= link_to "Destroy",admin_category_path(category), method: :delete, :class => "btn btn-danger",data: { confirm: "You sure?" } %></td>
    </tr>
  <% end %>
</table>
