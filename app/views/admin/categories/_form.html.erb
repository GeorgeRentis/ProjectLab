<%= form_for([:admin,@category],:html => {:class => 'admin_edit_category col-md-8 col-sm-8 '}) do |f|  %>
	<!-- Field for category name -->
  <div class = "form-group">
    <%= f.label :name,class: "control-label"%>
    <%= f.text_field :name,class: "form-control" %>
  </div>
 	<!-- Field for category image -->
  <div class = "form-group">
    <%= f.label :image_url,class: "control-label"%>
    <%= f.text_field :image_url,class: "form-control"%>
  </div>

  <%= f.submit class: "btn btn-success" %>
<% end %>