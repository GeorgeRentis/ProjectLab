<table class="table table-bordered lesson_profile">
	<tr>
  	<td rowspan=7>
      <% if @user.images.first != nil %>
    	 <img src= <%= @user.first.images.first.upload.url(:homepage) %> />
      <% else %>
        <img src= <%= @user.first.default_avatar %> />
      <% end %>

    </td>
  </tr>
  <tr class="lesson_row">
  	<td>
    	<label class="control-label">First Name:<%= @user.first.first_name %></label><br/>
     </td>
  </tr>
  <tr class="lesson_row">
  	<td>    	
    	 <label class="control-label">Last Name:<%= @user.first.last_name %></label><br/> 
    </td>
  </tr>
  <tr class="lesson_row">
  	<td>
    	<label class="control-label">email:<%= @user.first.email %></label><br/>
    </td>
  </tr>
  <tr class="lesson_row">
  	<td>
    	<label class="control-label">bio:<%= @user.first.bio %></label><br/>
    </td>
  </tr>
  <tr class="lesson_row">
  	<td>
    	<%= link_to "Send Message",new_user_message_path(:email => @user.first.email),class: "btn btn-primary" %>
    </td>
  </tr>

</table>













