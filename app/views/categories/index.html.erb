<div class="row">
  <h2 style="text-align:center">Categories List</h2>
  <div class="container" style="margin-top:25px">

    <% @categories.each do |category| %>
      <div class="col-sm-3 category" style="text-align:center;margin-bottom:25px">
        <img src=<%= category.image_url %> class="cat_image" %>
        <br/>
        <%= link_to category.name,lessons_path(:id => category.id),class: "btn btn-primary cat_name" %>
      </div>
    <% end %>
  </div>
</div>
<%= render 'layouts/admin/botmenu' %>
</div>
