<div class="row">
  <h2 style="text-align:center">Subject Areas</h2>
  <div class="container profile">

    <% @categories.each do |category| %>
      <div class="col-sm-4 col-md-3 category" >
        <img src=<%=category.image_url%> class="cat_image" %>
