<div class="container-fluid profile">
  <%= render 'users/usersidemenu' %>
  <div class="col-sm-8">
    <table class="table table-bordered" id="center_table">
      <thead>
        <tr>
          <th id="th" data-sort="string">Title</th>
          <th id="th" >Description</th>
          <th id="th" data-sort="string">Level</th>
          <th id="th" data-sort="string">Category</th>
          <th id="th">Teacher</th>
          <th id="th">No of Uploads</th>
          <th id="th">Action</th>
        </tr>
      </thead>
      <% @lessons.each do |lesson| %>
        <tr>
          <td><%= lesson.title %></td>
          <td><%= lesson.description %></td>
          <td><%= lesson.level %></td>
          <td><%= Category.where(id: lesson.category_id).first.name %></td>
          <td><%= User.where(id: lesson.user_id).first.email %></td>
          <td><%= lesson.uploads.count %></td>
          <td><%= link_to "Edit",  edit_user_lesson_path(lesson), :class => "btn btn-primary profile_buttons" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>





