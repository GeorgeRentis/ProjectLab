<div class="container-fluid profile">
  <%= render 'users/usersidemenu' %>
  <div class="col-sm-8">
    <%= nested_form_for([ :user,@lesson]) do |f| %>
      <div class = "form-group" >
        <%= f.label :title,class: "control-label" %>
        <%= f.text_field :title,class: "form-control" %>
      </div>
      <div class = "form-group">
        <%= f.label :description,class: "control-label" %>
        <%= f.text_area :description,class: "form-control" %>
      </div>
    <div class = "form-group">
      <%= f.label :level,class: "control-label"%>
      <%= f.select(:level,options_for_select([["Amateur","Amateur"],["Intermmediate","Intermmediate"],["Professional","Professional"],["World Class","World Class"],["Master","Master"]]),class: "form-control") %>
    </div>
      <div class = "form-group">
        <%= f.label :category_id,class: "control-label" %>
        <%= f.select(:category_id,Category.all.collect{|c| [c.name,c.id]},prompt: 'Select Category',class: "form-control") %>
      </div>
        <div class = "form-group">
    <%= f.fields_for :uploads do |upload| %>
      <%= upload.file_field :upload, class: "form-control" %>
      <%= upload.link_to_remove "Remove this file", class: "btn btn-danger btn-xs" %>
    <% end %>
    <p><%= f.link_to_add "Add a new file", :uploads, class: "btn btn-primary btn-xs" %></p>
  </div>
      <%= f.submit class: "btn btn-success" %>
    <% end %>
  </div>
</div>
</div>
