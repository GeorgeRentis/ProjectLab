<html>
  <head>
  </head>
  <body>
    <div class="container-fluid profile">
      <%= render 'users/usersidemenu' %>
      <div class="col-sm-4">
        <div class="panel panel-default">
          <div class="panel-heading"id="highlighted">Statistics</div>
          <table class="table">
            <tr>
              <td>Last signed in</td>
              <td> <%= current_user.current_sign_in_at %></td>
            </tr>
            <tr>
              <td>Lessons</td>
              <td> <%= current_user.lessons.count %></td>
            </tr>
            <tr>
              <td>Files Uploaded</td>
              <td> 10 </td>
            </tr>
            <tr>
              <td>Rating</td>
              <td> 8 </td>
            </tr>
          </table>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading " id="highlighted">Lesson Statistics</div>
          <table class="table">
            <tr>
              <td>Math</td>
              <td> <%= current_user.lessons.where(category_id: 1).count %></td>
            </tr>
            <tr>
              <td>Physics</td>
              <td> <%= current_user.lessons.where(category_id: 2).count %> </td>
            </tr>
            <tr>
              <td>Chemistry</td>
              <td> <%= current_user.lessons.where(category_id: 3).count %> </td>
            </tr>
            <tr>
              <td>Other</td>
              <td><%= current_user.lessons.where(category_id: 4).count %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="col-sm-4">
      
        <% if current_user.comments %>
          <% current_user.comments.each do |comment| %>
            <div class="panel panel-default">
              <div class="panel-heading" id="highlighted">Comment by: <%= User.where(id: comment.user_id).first.email %></div>
              <div class="panel-body">
                <%= comment.comment %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    </div>
  </body>
</html>